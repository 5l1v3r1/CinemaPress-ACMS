<% if (typeof news === 'object' && news.length) { %>
<div class="clear"></div>
<% news.forEach(function (content) { %>
<div class="cinemapress-news-block">
    <div style="margin: 0; padding: 10px">
        <a href="<%- content.url %>" class="cinemapress-news" style="background-image:url(<%- content.image %>);">
            <div class="cinemapress-news-title">
                <%= content.title %>
            </div>
        </a>
    </div>
</div>
<% }); %>
<div class="clear"></div>
<% } %>

<% if (typeof recent === 'object' && recent.length) { %>
<% recent.forEach(function (comment) { %>
<div style="margin: 10px;">
    <div class="cinemapress-recent">
        <div class="cinemapress-recent-head">
            <% if (comment.avatar) { %>
            <div class="cinemapress-recent-head-avatar">
                <img src="<%- comment.avatar %>" alt="<%- comment.user %>">
            </div>
            <% } %>
            <div class="cinemapress-recent-head-meta">
                <div>
                    <a href="<%- comment.url %>"><%= comment.title %></a>
                </div>
                <div>
                        <span>
                            <%- comment.user %>
                        </span><span>
                            сказал(а)
                        </span><span>
                            <%- comment.date %>
                        </span>
                </div>
            </div>
        </div>
        <div class="cinemapress-recent-comment">
            <%- comment.comment %>
        </div>
    </div>
</div>
<% }); %>
<% } %>

<% if (typeof page.adv == 'object' && page.adv.bottom) { %>
<div style="text-align: center; margin: 10px auto;">
    <%- page.adv.bottom %>
</div>
<div class="clear"></div>
<% } %>

<div class="info recentlyViewedBlock" style="display: none;">
    <div>Вы надавно смотрели:</div>
    <div id="recentlyViewed"></div>
</div>

<div class="clear"></div>

<% if (page.social) { %>
<div class="info">
    <% if (page.social.vk) { %><a href="<%- page.social.vk %>" target="_blank">ВК</a><% } %>
    <% if (page.social.facebook) { %><span> | </span><a href="<%- page.social.facebook %>" target="_blank">facebook</a><% } %>
    <% if (page.social.twitter) { %><span> | </span><a href="<%- page.social.twitter %>" target="_blank">twitter</a><% } %>
    <% if (page.social.gplus) { %><span> | </span><a href="<%- page.social.gplus %>" target="_blank">G+</a><% } %>
    <% if (page.social.instagram) { %><span> | </span><a href="<%- page.social.instagram %>" target="_blank">Instagram</a><% } %>
    <% if (page.social.youtube) { %><span> | </span><a href="<%- page.social.youtube %>" target="_blank">YouTube</a><% } %>
</div>
<% } %>

<div class="info">
    <a href="<%- page.url.replace('://m.', '://') %>" onclick="document.cookie = 'CP_desktop=1; domain=<%- page.domain.replace(/^m\./, '') %>; path=/;';">
        Полная версия сайта
    </a>
</div>

<div class="info">
    <strong>&copy;&nbsp;<%- new Date().getFullYear() %>&nbsp;<a href="https://cinemapress.org" target="_blank">CinemaPress&nbsp;ACMS</a></strong> | <span id="mylo">Activate JS</span><script>(function(d,i,l,r){d.getElementById(i).innerHTML=l+'@'+r;})(window.document,'mylo','<%- page.email.split('@')[0] %>','<%- page.email.split('@')[1] %>');</script>
</div>

<%- page.codes.footer %>

</body>
</html>