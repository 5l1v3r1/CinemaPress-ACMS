                                        <a href="https://CinemaPress.org/admin/publish.html#thematic" class="csstip" title="Вы можете создать тематический сайт, на котором будут опубликованы только «Аниме», «Российские фильмы», и т.п." target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding">
                                    <div class="row">

                                        <div class="col-sm-3">
                                            <label>Тип:</label>
                                        </div>
                                        <div class="col-sm-9">
                                            <select name="config.publish.thematic.type" class="form-control">
                                                <option value="0" <% if (config.publish.thematic.type == '0') { %>selected="selected"<% } %>>
                                                    Фильмы
                                                </option>
                                                <option value="1" <% if (config.publish.thematic.type == '1') { %>selected="selected"<% } %>>
                                                    Сериалы
                                                </option>
                                                <option value="" <% if (config.publish.thematic.type == '') { %>selected="selected"<% } %>>
                                                    Все
                                                </option>
                                            </select>
                                        </div>

                                    </div>

                                    <div class="spacer-10"></div>

                                    <div class="row">

                                        <div class="col-sm-3">
                                            <label>Годы:</label>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="text" name="config.publish.thematic.year" value="<%= config.publish.thematic.year %>" class="form-control">
                                        </div>

                                    </div>

                                    <div class="spacer-10"></div>

                                    <div class="row">

                                        <div class="col-sm-3">
                                            <label>Жанры:</label>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="text" name="config.publish.thematic.genre" value="<%= config.publish.thematic.genre %>" class="form-control">
                                        </div>

                                    </div>

                                    <div class="spacer-10"></div>

                                    <div class="row">

                                        <div class="col-sm-3">
                                            <label>Страны:</label>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="text" name="config.publish.thematic.country" value="<%= config.publish.thematic.country %>" class="form-control">
                                        </div>

                                    </div>

                                    <div class="spacer-10"></div>

                                    <div class="row">

                                        <div class="col-sm-3">
                                            <label>Актеры:</label>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="text" name="config.publish.thematic.actor" value="<%= config.publish.thematic.actor %>" class="form-control">
                                        </div>

                                    </div>

                                    <div class="spacer-10"></div>

                                    <div class="row">

                                        <div class="col-sm-3">
                                            <label>Режиссеры:</label>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="text" name="config.publish.thematic.director" value="<%= config.publish.thematic.director %>" class="form-control">
                                        </div>

                                    </div>

                                    <div class="spacer-10"></div>

                                    <div class="row">

                                        <div class="col-sm-3">
                                            <label>Фильмы:</label>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="text" name="config.publish.thematic.query_id" value="<%= config.publish.thematic.query_id %>" class="form-control">
                                        </div>

                                    </div>

                                    <div class="spacer-10"></div>

                                    <div class="row">

                                        <div class="col-sm-3">
                                            <label>Стоп-слова:</label>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="text" name="config.publish.thematic.search" value="<%= config.publish.thematic.search %>" class="form-control">
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <script>
                $("#movies_slider").noUiSlider({range:[0,1e3],start:[<%= config.publish.every.movies %>],handles:1,step:1,connect:"lower",serialization:{resolution:1,to:[$("#movies")]}}),$("#hours_slider").noUiSlider({range:[0,24],start:[<%= config.publish.every.hours %>],handles:1,step:1,connect:"lower",serialization:{resolution:1,to:[$("#hours")]}}),$("#diapason").noUiSlider({range:[298,3000000],start:[<%= config.publish.start %>,<%= config.publish.stop %>],handles:2,step:1,connect:"lower",serialization:{to:[$("#start"),$("#stop")],resolution:1}});
            </script>

            <% include ./includes/footer.ejs %>

        </div>
    </div>
</div>

