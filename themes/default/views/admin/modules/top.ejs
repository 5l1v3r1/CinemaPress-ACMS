<!--[if !IE]><!--> <html class="no-js">                   <!--<![endif]-->
<head>

    <% include ../includes/head.ejs %>

</head>
<body>
<div id="container" class="clearfix">

    <% include ../includes/left.ejs %>

    <% include ../includes/right.ejs %>

    <div id="main" class="clearfix">

        <% include ../includes/header.ejs %>

        <div id="content" class="clearfix">

            <header id="header-sec">
                <div class="inner-padding">
                    <div class="pull-left">
                        <h2>
                            Топ
                        </h2>
                    </div>
                    <div class="pull-right">
                        <% if (modules.top.status) { %>
                        <a href="#[false]" data-module="top" data-status="false" class="btn btn-danger module-status">
                            <i class="fa fa-power-off"></i>&nbsp;Отключить
                        </a>
                        <% } else { %>
                        <a href="#[true]" data-module="top" data-status="true" class="btn btn-success module-status">
                            <i class="fa fa-power-off"></i>&nbsp;Активировать
                        </a>
                        <% } %>
                    </div>
                </div>
            </header>

            <div class="window">
                <div class="actionbar">
                    <div class="pull-left">
                        <a href="#" class="btn" data-toggle-sidebar="left">
                            <i class="fa fa-chevron-left"></i>
                        </a>
                        <a href="/<%- config.urls.admin %>/top" class="btn">
                            Модуль топ в категориях
                        </a>
                    </div>
                    <div class="pull-right">
                        <p>
                            <% if (modules.top.status) { %>
                            <span class="label label-success">Включен</span>
                            <% } else { %>
                            <span class="label label-danger">Отключен</span>
                            <% } %>
                        </p>
                        <a href="#" class="btn" data-toggle-sidebar="right">
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>

                <div class="inner-padding">

                    <% if (modules.top.status) { %>

                    <div class="row">
                        <div class="col-sm-3">
                            <label>Сортировка:</label>
                        </div>
                        <div class="col-sm-9">
                            <select name="modules.top.data.sorting" class="form-control">
                                <% for (name in config.sorting) { %>
                                <% if (modules.top.data.sorting == name) { %>
                                <option value="<%- name %>" selected="selected">
                                    <%- config.sorting[name] %>
                                </option>
                                <% } else { %>
                                <option value="<%- name %>">
                                    <%- config.sorting[name] %>
                                </option>
                                <% } %>
                                <% } %>
                            </select>
                            <div class="helper-text-box">
                                <div class="form-helper-header">Сортировка по умолчанию</div>
                                <p>
                                    По этой сортировке будут отображаться ТОП фильмы в категориях.
                                </p>
                            </div>
                        </div>
                        <div class="spacer-10"></div>
                        <div class="col-sm-3">
                            <label>Число фильмов:</label>
                        </div>
                        <div class="col-sm-9">
                            <select name="modules.top.data.count" class="form-control">
                                <% for (var i = 1; i <= 20; i++) { %>
                                <% if (modules.top.data.count == i) { %>
                                <option value="<%- i %>" selected="selected">
                                    <%- i %>
                                </option>
                                <% } else { %>
                                <option value="<%- i %>">
                                    <%- i %>
                                </option>
                                <% } %>
                                <% } %>
                            </select>
                        </div>
                    </div>

                    <% } else { %>

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="attention-box attention-danger">
                                <h4>Модуль «Топ» отключен</h4>
                                <div class="spacer-20"></div>
                                <p class="text-muted">
                                    Модуль «Топ» позволяет в каждой категории отображать лучшие фильмы по определенной сортировке.
                                    <br>
                                    Чтобы включить модуль, нажмите на кнопку «Активировать» вверху экрана.
                                </p>
                            </div>
                        </div>
                    </div>

                    <% } %>

                </div>
            </div>

            <% include ../includes/footer.ejs %>

        </div>
    </div>
</div>

</body>
</html>