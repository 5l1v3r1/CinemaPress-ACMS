<!--[if IE 9]>     <html class="ie ie9 lte9 no-js">           <![endif]-->
<!--[if gt IE 9]>  <html class="no-js">                       <![endif]-->
<!--[if !IE]><!--> <html class="no-js">                   <!--<![endif]-->
<head>

    <% include ../includes/head.ejs %>

</head>
<body>
<div id="container" class="clearfix">

    <% include ../includes/left.ejs %>

    <% include ../includes/right.ejs %>

    <div id="main" class="clearfix">

        <% include ../includes/header.ejs %>

        <div id="content" class="clearfix">

            <header id="header-sec">
                <div class="inner-padding">
                    <div class="pull-left">
                        <h2>
                            Слайдер
                        </h2>
                    </div>
                    <div class="pull-right">
                        <% if (modules.slider.status) { %>
                        <a href="#[false]" data-module="slider" data-status="false" class="btn btn-danger module-status">
                            <i class="fa fa-power-off"></i>&nbsp;Отключить
                        </a>
                        <% } else { %>
                        <a href="#[true]" data-module="slider" data-status="true" class="btn btn-success module-status">
                            <i class="fa fa-power-off"></i>&nbsp;Активировать
                        </a>
                        <% } %>
                    </div>
                </div>
            </header>

            <div class="window">
                <div class="actionbar">
                    <div class="pull-left">
                        <a href="#" class="btn" data-toggle-sidebar="left">
                            <i class="fa fa-chevron-left"></i>
                        </a>
                        <a href="/<%- config.urls.admin %>/slider" class="btn">
                            Модуль слайдера фильмов
                        </a>
                    </div>
                    <div class="pull-right">
                        <p>
                            <% if (modules.slider.status) { %>
                            <span class="label label-success">Включен</span>
                            <% } else { %>
                            <span class="label label-danger">Отключен</span>
                            <% } %>
                        </p>
                        <a href="#" class="btn" data-toggle-sidebar="right">
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>

                <div class="inner-padding">

                    <% if (modules.slider.status) { %>

                    <div class="row">
                        <div class="col-sm-3">
                            <label>Фильмы</label>
                        </div>
                        <div class="col-sm-9">
                            <input name="modules.slider.data.movies" value="<%- modules.slider.data.movies.join(',') %>" class="form-control input_ids" type="text">
                            <div class="helper-text-box">
                                <div class="form-helper-header">ID фильмов для слайдера</div>
                                <p>
                                    Укажите через запятую ID КиноПоиск фильмов которые будут добавлены в слайдер на сайте.
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="sidebar-module">
                                <div class="thumbs-list thumbs-small">
                                    <ul>
                                        <% modules.slider.data.movies.forEach(function (id) { %>
                                        <li>
                                            <img style="width: 60px; height: 90px;" class="media-object" src="https://st.kp.yandex.net/images/sm_film/<%- id %>.jpg" alt="Poster">
                                        </li>
                                        <% }); %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% } else { %>

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="attention-box attention-danger">
                                <h4>Модуль «Слайдер» отключен</h4>
                                <div class="spacer-20"></div>
                                <p class="text-muted">
                                    Модуль «Слайдер» позволяет добавить на сайт слайдер с фильмами.
                                    <br>
                                    Чтобы включить модуль, нажмите на кнопку «Активировать» вверху экрана.
                                </p>
                            </div>
                        </div>
                    </div>

                    <% } %>

                </div>
            </div>

            <% include ../includes/footer.ejs %>

        </div>
    </div>
</div>

</body>
</html>