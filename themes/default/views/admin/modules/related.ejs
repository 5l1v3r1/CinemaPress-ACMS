<div id="container" class="clearfix">

    <% include ../includes/left.ejs %>

    <% include ../includes/right.ejs %>

    <div id="main" class="clearfix">

        <% include ../includes/header.ejs %>

        <div id="content" class="clearfix">

            <header id="header-sec">
                <div class="inner-padding">
                    <div class="pull-left">
                        <h2>
                            <%- title %>
                        </h2>
                    </div>
                    <div class="pull-right">
                        <% if (modules.related.status) { %>
                        <a href="javascript:void(0)" data-module="related" data-status="false" class="btn btn-danger module-status">
                            <i class="fa fa-power-off"></i>&nbsp;Отключить
                        </a>
                        <% } else { %>
                        <a href="javascript:void(0)" data-module="related" data-status="true" class="btn btn-success module-status">
                            <i class="fa fa-power-off"></i>&nbsp;Активировать
                        </a>
                        <% } %>
                    </div>
                </div>
            </header>

            <div class="window">
                <div class="actionbar">
                    <div class="pull-left">
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="left">
                            <i class="fa fa-chevron-left"></i>
                        </a>
                        <a href="/<%- config.urls.admin %>/related" class="btn">
                            Модуль связанных фильмов
                        </a>
                        <a href="https://CinemaPress.org/admin/related.html" class="btn" title="Информация о параметрах модуля связанных фильмов" target="_blank">
                            <i class="fa fa-info-circle text-muted"></i>
                        </a>
                    </div>
                    <div class="pull-right">
                        <p>
                            <% if (modules.related.status) { %>
                            <span class="label label-success">Включен</span>
                            <% } else { %>
                            <span class="label label-danger">Отключен</span>
                            <% } %>
                        </p>
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="right">
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>

                <div class="inner-padding">

                    <% if (modules.related.status) { %>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="example-box">
                                <div class="example-box-header">
                                    <div class="example-label">
                                        <i class="fa fa-tags"></i>&nbsp;&nbsp;&nbsp;Связанные фильмы по году
                                    </div>
                                    <div class="example-label" style="float: right">
                                        <a href="https://CinemaPress.org/admin/related.html#year" class="csstip" title="Блок с фильмами под основной информацией фильма из такого же года, что и оригинальный фильм" target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <input name="modules.related.data.types.year.name" value="<%= modules.related.data.types.year.name %>" class="form-control" type="text">
                                        </div>
                                        <div class="col-xs-6">
                                            <select name="modules.related.data.types.year.count" class="form-control without">
                                                <% for (var i = 1; i <= 20; i++) { %>
                                                <% if (modules.related.data.types.year.count == i) { %>
                                                <option value="<%= i %>" selected="selected">
                                                    <%- i %> фильма(-ов)
                                                </option>
                                                <% } else { %>
                                                <option value="<%= i %>">
                                                    <%- i %> фильма(-ов)
                                                </option>
                                                <% } %>
                                                <% } %>
                                            </select>
                                        </div>

                                        <div class="spacer-10"></div>

                                        <div class="col-xs-6">
                                            <div class="inline-labels">
                                                <label>
                                                    <input name="modules.related.data.display" value="year" type="checkbox" <% if (modules.related.data.display.indexOf('year')+1) { %> checked="" <% } %> data-name="year"><span></span> из одного года
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-xs-6">
                                            <select name="modules.related.data.types.year.sorting" class="form-control without">
                                                <% for (name in config.sorting) { %>
                                                <% if (modules.related.data.types.year.sorting == name) { %>
                                                <option value="<%= name %>" selected="selected">
                                                    <%- config.sorting[name] %>
                                                </option>
                                                <% } else { %>
                                                <option value="<%= name %>">
                                                    <%- config.sorting[name] %>
                                                </option>
                                                <% } %>
                                                <% } %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="spacer-10"></div>

                        <div class="col-sm-12">
                            <div class="example-box">
                                <div class="example-box-header">
                                    <div class="example-label">
                                        <i class="fa fa-tags"></i>&nbsp;&nbsp;&nbsp;Связанные фильмы по жанрам
                                    </div>
                                    <div class="example-label" style="float: right">
                                        <a href="https://CinemaPress.org/admin/related.html#genre" class="csstip" title="Блок с фильмами под основной информацией фильма из такого же жанра или всех жанров, что и оригинальный фильм" target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <input name="modules.related.data.types.genre.name" value="<%= modules.related.data.types.genre.name %>" class="form-control" type="text">
                                        </div>
                                        <div class="col-xs-6">
                                            <select name="modules.related.data.types.genre.count" class="form-control without">
                                                <% for (var i = 1; i <= 20; i++) { %>
                                                <% if (modules.related.data.types.genre.count == i) { %>
                                                <option value="<%= i %>" selected="selected">
                                                    <%- i %> фильма(-ов)
                                                </option>
                                                <% } else { %>
                                                <option value="<%= i %>">
                                                    <%- i %> фильма(-ов)
                                                </option>
                                                <% } %>
                                                <% } %>
                                            </select>
                                        </div>

                                        <div class="spacer-10"></div>

                                        <div class="col-xs-6">
                                            <div class="inline-labels">
                                                <label>
                                                    <input name="modules.related.data.display" value="genres" type="checkbox" <% if (modules.related.data.display.indexOf('genres')+1) { %> checked="" <% } %> data-name="genre"><span></span> всех
                                                </label>
                                                <label>
                                                    <input name="modules.related.data.display" value="genre" type="checkbox" <% if (modules.related.data.display.indexOf('genre')+1) { %> checked="" <% } %> data-name="genre"><span></span> одного жанра
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-xs-6">
                                            <select name="modules.related.data.types.genre.sorting" class="form-control without">
                                                <% for (name in config.sorting) { %>
                                                <% if (modules.related.data.types.genre.sorting == name) { %>
                                                <option value="<%= name %>" selected="selected">
                                                    <%- config.sorting[name] %>
                                                </option>
                                                <% } else { %>
                                                <option value="<%= name %>">
                                                    <%- config.sorting[name] %>
                                                </option>
                                                <% } %>
                                                <% } %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="spacer-10"></div>

                        <div class="col-sm-12">
                            <div class="example-box">
                                <div class="example-box-header">
                                    <div class="example-label">
                                        <i class="fa fa-tags"></i>&nbsp;&nbsp;&nbsp;Связанные фильмы по странам
                                    </div>
                                    <div class="example-label" style="float: right">
                                        <a href="https://CinemaPress.org/admin/related.html#country" class="csstip" title="Блок с фильмами под основной информацией фильма из такой же страны или всех стран, что и оригинальный фильм" target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <input name="modules.related.data.types.country.name" value="<%= modules.related.data.types.country.name %>" class="form-control" type="text">
                                        </div>
                                        <div class="col-xs-6">
                                            <select name="modules.related.data.types.country.count" class="form-control without">
                                                <% for (var i = 1; i <= 20; i++) { %>
                                                <% if (modules.related.data.types.country.count == i) { %>
