                                                    <%- country.name %>
                                                </option>
                                                <% } else { %>
                                                <option value="<%= country.iso %>">
                                                    <%- country.name %>
                                                </option>
                                                <% } %>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="spacer-10"></div>

                        <div class="col-sm-12">
                            <div class="example-box">
                                <div class="example-box-header">
                                    <div class="example-label">
                                        <i class="fa fa-picture-o"></i>&nbsp;&nbsp;&nbsp;Шаблон сайта
                                    </div>
                                    <div class="example-label" style="float: right">
                                        <a href="https://CinemaPress.org/admin/main.html#theme" class="csstip" title="Название шаблона сайта, папка которого должна быть в /themes/" target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding">
                                    <div class="row">
                                        <div class="col-xs-5 text-center">
                                            <select name="config.theme" class="form-control">
                                                <% themes.forEach(function(theme) { %>
                                                    <% if (config.theme === theme) { %>
                                                    <option value="<%= theme %>" selected="selected">
                                                        <%- theme %>
                                                    </option>
                                                    <% } else { %>
                                                    <option value="<%= theme %>">
                                                        <%- theme %>
                                                    </option>
                                                    <% } %>
                                                <% }); %>
                                            </select>
                                        </div>
                                        <div class="col-xs-5 text-center">
                                            <a href="https://cinemapress.org/buy/theme.html" target="_blank" class="btn btn-block btn-default">
                                                <span class="fa fa-money"></span>&nbsp;&nbsp;49$ Своя тема
                                            </a>
                                        </div>
                                        <div class="col-xs-2 text-center">
                                            <a href="https://cinemapress.org/article/chto-takoe-individualnaya-tema.html" target="_blank" class="btn btn-block btn-default">
                                                <span class="fa fa-question-circle"></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="spacer-10"></div>

                        <div class="col-sm-12">
                            <div class="example-box">
                                <div class="example-box-header">
                                    <div class="example-label">
                                        <i class="fa fa-server"></i>&nbsp;&nbsp;&nbsp;Nginx сервер
                                    </div>
                                    <div class="example-label" style="float: right">
                                        <a href="https://CinemaPress.org/admin/main.html#nginx" class="csstip" title="Этот параметр носит информационный характер и не может быть изменен из админ-панели" target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding">
                                    <div class="row">
                                        <div class="col-lg-12 col-xs-12 text-center">
                                            <input name="config.nginx.addr" value="<%= config.nginx.addr %>" class="form-control" type="text" disabled="disabled" style="background-color: #272F38;">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="spacer-10"></div>

                        <div class="col-sm-12">
                            <div class="example-box">
                                <div class="example-box-header">
                                    <div class="example-label">
                                        <i class="fa fa-search"></i>&nbsp;&nbsp;&nbsp;Sphinx сервер
                                    </div>
                                    <div class="example-label" style="float: right">
                                        <a href="https://CinemaPress.org/admin/main.html#sphinx" class="csstip" title="При высоких нагрузках на поисковый движок Sphinx, его можно вынести на отдельный сервер" target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding">
                                    <div class="row">
                                        <div class="col-lg-6 col-xs-6 text-center">
                                            <input name="config.sphinx.addr" value="<%= config.sphinx.addr %>" class="form-control" type="text">
                                        </div>
                                        <div class="col-lg-6 col-xs-6 text-center">
                                            <a href="javascript:void(0)" class="btn btn-block btn-default" id="restart">
                                                <span class="fa fa-repeat"></span>&nbsp;&nbsp;Перезагрузить
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="spacer-10"></div>

                        <div class="col-sm-12">
                            <div class="example-box">
                                <div class="example-box-header">
                                    <div class="example-label">
                                        <i class="fa fa-rocket"></i>&nbsp;&nbsp;&nbsp;Memcached сервер
                                    </div>
                                    <div class="example-label" style="float: right">
                                        <a href="https://CinemaPress.org/admin/main.html#memcached" class="csstip" title="При высоких нагрузках кэширующий сервер можно вынести на отдельную машину, тем самым увеличив производительность сайта" target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding">
                                    <div class="row">
                                        <div class="col-lg-6 col-xs-6 text-center">
                                            <input name="config.cache.addr" value="<%= config.cache.addr %>" class="form-control" type="text">
                                        </div>
                                        <div class="col-lg-6 col-xs-6 text-center">
                                            <a href="javascript:void(0)" class="btn btn-block btn-default" id="flush">
                                                <span class="fa fa-trash-o"></span>&nbsp;&nbsp;Очистить&nbsp;кэш
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% if (config.language === 'ru') { %>

                        <div class="spacer-10"></div>

                        <div class="col-sm-12">
                            <div class="example-box">
                                <div class="example-box-header">
                                    <div class="example-label">
                                        <i class="fa fa-picture-o"></i>&nbsp;&nbsp;&nbsp;Сервер картинок
                                    </div>
                                    <div class="example-label" style="float: right">
                                        <a href="https://CinemaPress.org/admin/main.html#image" class="csstip" title="По умолчанию все картинки грузятся со сторонних источников, однако если Вы хотите чтобы постеры были загружены с Вашего сайта, Вы можете «Загрузить на сервер» статические файлы и указать в этом поле адрес <%- config.domain %>" target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding">
                                    <div class="row">
                                        <div class="col-lg-6 col-xs-6 text-center">
                                            <input name="config.image.addr" value="<%= config.image.addr %>" class="form-control" type="text">
                                        </div>
                                        <div class="col-lg-6 col-xs-6 text-center">
                                            <select name="config.image.size" class="form-control">
                                                <% for (var i = 60; i <= 180; i = i+30) { %>
                                                <% if (config.image.size == i) { %>
                                                <option value="<%= i %>" selected="selected">
                                                    Ширина постера: <%- i %> px
                                                </option>
                                                <% } else { if (i === 150) continue; %>
                                                <option value="<%= i %>">
                                                    Ширина постера: <%- i %> px
                                                </option>
                                                <% } %>
                                                <% } %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% } %>
                    </div>

                </div>
            </div>

            <% include includes/footer.ejs %>

        </div>
    </div>
</div>

</body>
</html>