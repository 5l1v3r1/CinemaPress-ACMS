<!DOCTYPE html>
<!--[if lt IE 7]>  <html class="ie ie6 lte9 lte8 lte7 no-js"> <![endif]-->
<!--[if IE 7]>     <html class="ie ie7 lte9 lte8 lte7 no-js"> <![endif]-->
<!--[if IE 8]>     <html class="ie ie8 lte9 lte8 no-js">      <![endif]-->
<!--[if IE 9]>     <html class="ie ie9 lte9 no-js">           <![endif]-->
<!--[if gt IE 9]>  <html class="no-js">                       <![endif]-->
<!--[if !IE]><!--> <html class="no-js">                   <!--<![endif]-->
<head>

    <% include includes/head.ejs %>

</head>
<body>
<div id="container" class="clearfix">

    <% include includes/left.ejs %>

    <% include includes/right.ejs %>

    <div id="main" class="clearfix">

        <% include includes/header.ejs %>

        <div id="content" class="clearfix">

            <header id="header-sec">
                <div class="inner-padding">
                    <div class="pull-left">
                        <h2>
                            Коды
                        </h2>
                    </div>
                </div>
            </header>

            <div class="window">
                <div class="actionbar">
                    <div class="pull-left">
                        <a href="#" class="btn" data-toggle-sidebar="left">
                            <i class="fa fa-chevron-left"></i>
                        </a>
                        <a href="/<%- config.urls.admin %>/codes" class="btn">
                            Вставить код на сайт
                        </a>
                    </div>
                    <div class="pull-right">
                        <a href="#" class="btn" data-toggle-sidebar="right">
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>

                <div class="inner-padding">

                    <% if (config.codes) { %>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="advanced-textarea">
                                <div class="text-muted">
                                    В верх страницы:
                                </div>

                                <div class="spacer-10"></div>

                                <textarea class="form-control textarea" name="config.codes.head"><%= config.codes.head %></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="spacer-10"></div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="advanced-textarea">
                                <div class="text-muted">
                                    В низ страницы:
                                </div>

                                <div class="spacer-10"></div>

                                <textarea class="form-control textarea" name="config.codes.footer"><%= config.codes.footer %></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="spacer-10"></div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="advanced-textarea">
                                <div class="text-muted">
                                    Файл robots.txt:
                                </div>

                                <div class="spacer-10"></div>

                                <textarea class="form-control textarea" name="config.codes.robots"><%- config.codes.robots %></textarea>
                                <div class="advanced-textarea-footer">
                                    <div class="pull-left">
                                        <div class="text" style="float: none;">
                                            Host: <% if (config.protocol == 'https://') { %><%- config.protocol %> <% } %> <%- config.domain %>
                                        </div>
                                        <div class="text" style="float: none;">
                                            Sitemap: <%- config.protocol + config.domain + '/' + config.urls.sitemap %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% } %>

                </div>
            </div>

            <% include includes/footer.ejs %>

        </div>
    </div>
</div>

</body>
</html>