                                        <i class="fa fa-hourglass-1"></i>&nbsp;&nbsp;&nbsp;Memcached кэширование
                                    </div>
                                    <div class="example-label" style="float: right">
                                        <a href="https://CinemaPress.org/admin/cache.html#memcached" class="csstip" title="Указание времени, на которое будет закэширована каждая страница сайта." target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding">
                                    <div class="row">
                                        <div class="col-xs-6 text-center">
                                            <select name="config.cache.time" class="form-control">
                                                <% var times = {"0": "Отключить", "3600": "1 час", "43200": "12 часов", "86400": "1 день", "604800": "1 неделя", "2592000": "1 месяц"};
                                                        for (time in times) { %>
                                                <% if (time == config.cache.time) { %>
                                                <% if (config.cache.time) { %>
                                                <option value="<%= time %>" selected="selected">
                                                    <%- times[time] %>
                                                </option>
                                                <% } else { %>
                                                <option value="<%= time %>" selected="selected">
                                                    Отключено
                                                </option>
                                                <% } %>
                                                <% } else { %>
                                                <option value="<%= time %>">
                                                    <%- times[time] %>
                                                </option>
                                                <% } %>
                                                <% } %>
                                            </select>
                                        </div>
                                        <div class="col-xs-6">
                                            <a href="javascript:void(0)" id="flush" class="btn btn-default btn-block"><span class="fa fa-trash-o"></span>&nbsp;&nbsp;Очистить&nbsp;кэш</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

